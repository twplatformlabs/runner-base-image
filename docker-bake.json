{
  "variable": {
    "CREATED": { "default": "" },
    "REVISION": { "default": "" },
    "UBUNTU_BASE": { "default": "" },
    "TAG": { "default": "" }
  },

  "group": {
    "runners": {
      "targets": ["ubuntu"]
    }
  },
  "target": {
    "_release": {
      "labels": {
        "org.opencontainers.image.created": "${CREATED}",
        "org.opencontainers.image.authors": "nic.cheneweth@thoughtworks.com",
        "org.opencontainers.image.revision": "${REVISION}",
        "org.opencontainers.image.vendor": "ThoughtWorks, Inc.",
        "org.opencontainers.image.licenses": "MIT"
      },
      "args": {
        "BUILDKIT_CONTEXT_KEEP_GIT_DIR": "1",
        "BUILDX_EXPERIMENTAL": "1",
        "BUILDKIT_SBOM_SCAN_CONTEXT": "1"
      },
      "attest": [
        "type=provenance,mode=max,version=v1",
        "type=sbom"
      ]
    },
    "ubuntu": {
      "dockerfile": "Dockerfile",
      "tags": ["ghcr.io/twplatformlabs/runner-base-image:${TAG}"],
      "context": ".",
      "platforms": ["linux/amd64"],
      "inherits": ["_release"],
      "labels": {
        "org.opencontainers.image.url": "https://github.com/twplatformlabs/runner-base-image",
        "org.opencontainers.image.documentation": "https://github.com/twplatformlabs/runner-base-image",
        "org.opencontainers.image.source": "https://github.com/twplatformlabs/runner-base-image",
        "org.opencontainers.image.title": "runner-base-image",
        "org.opencontainers.image.description": "Ubuntu-based GitHub runner image containing organizational base packages",
        "org.opencontainers.image.base.name": "${UBUNTU_BASE}"
      }
    }
  }
}